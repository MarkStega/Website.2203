@using Microsoft.AspNetCore.Components.Web
@namespace Website.BlazorServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Website.Lib
@inject ContentSecurityPolicyService NonceService


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />
    <meta name="theme-color" content="#FFD230"/>

    <title>Dioptra</title>
    <base href="/" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://use.typekit.net/zjb3qsk.css">

    <link rel="stylesheet" href="_content/Material.Blazor/material.blazor.min.css" />
    <link rel="stylesheet" id="app-theme" href="_content/Website.Lib/css/dioptra.min.css" />

    <link rel="icon" type="image/png" href="_content/Website.Lib/pwa/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="_content/Website.Lib/pwa/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="_content/Website.Lib/pwa/favicon-96x96.png" sizes="96x96">

    <link rel="apple-touch-icon" sizes="512x512" href="_content/Website.Lib/ios-images/512.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="_content/Website.Lib/ios-images/192.png" />

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body class="mdc-typography">
    @RenderBody()

    <div id="blazor-error-ui">
        <div id="reload-dialog" class="mdc-dialog">
            <div id="reload-container" class="mdc-dialog__container">
                <div class="mdc-dialog__surface"
                     role="alertdialog"
                     aria-modal="true"
                     aria-labelledby="my-dialog-title"
                     aria-describedby="my-dialog-content">
                    <h2 class="mdc-dialog__title" id="my-dialog-title">
                        <span class="material-icons-outlined">error</span> Website Error
                    </h2>
                    <div class="mdc-dialog__content" id="my-dialog-content">
                        <environment include="Staging,Production">
                            Click the button to reload the website.
                        </environment>
                        <environment include="Development">
                            An unhandled exception has occurred. See browser dev tools for details.
                        </environment>
                    </div>
                    <div class="mdc-dialog__actions" tabindex="1">
                        <button id="reload-button" type="button" class="mdc-button mdc-dialog__button mdc-button--raised" data-mdc-dialog-action="discard" onclick="location.reload()">
                            <div class="mdc-button__ripple"></div>
                            <span class="mdc-button__label">Reload</span>
                        </button>
                    </div>
                </div>
            </div>
            <div id="reload-scrim" class="mdc-dialog__scrim"></div>
        </div>
    </div>

    <script nonce="@NonceService.NonceValue" src="_framework/blazor.server.js"></script>
    <script nonce="@NonceService.NonceValue" src="_content/GoogleAnalytics.Blazor/googleanalytics.blazor.js"></script>
    <script nonce="@NonceService.NonceValue" src="_content/Material.Blazor/material.blazor.min.js"></script>
    <script nonce="@NonceService.NonceValue" src="_content/Website.Lib/js/dioptra.js"></script>
</body>
</html>
